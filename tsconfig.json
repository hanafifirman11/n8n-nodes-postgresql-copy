{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["nodes/**/*", "credentials/**/*", "test/**/*", "types/**/*"],
  "exclude": ["dist", "node_modules"]
}
